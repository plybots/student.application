<Window x:Class="CRABSTUDENT.ExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRABSTUDENT"
        mc:Ignorable="d"
        Title="ExportWindow" Height="300" Width="300">
    <!--dialog progress-->
    <Grid Name="ProgressDialog" Visibility="Visible">
        <ProgressBar x:Name="loadingLabel" Visibility="Visible" Width="200" Height="18" IsIndeterminate="True" Background="#FFF9F9F3" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="39,125,53,126" BorderBrush="{x:Null}" Foreground="#FF06B0A8"/>
        <TextBlock Text="{Binding ElementName=loadingLabel, Path=Value, StringFormat={}{0:Preparing data} ....}" FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
    <!--/dialog progress-->

</Window>
